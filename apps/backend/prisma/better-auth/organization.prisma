// Better Auth: Organization plugin (https://better-auth.com/docs/plugins/organization)
model Organization {
  id        String   @id
  name      String
  slug      String
  logo      String?
  metadata  String?
  createdAt DateTime
  members   Member[]
  invitations Invitation[]

  @@unique([slug])
  @@map("organization")
  @@schema("better_auth")
}
