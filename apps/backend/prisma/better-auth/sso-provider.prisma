// Better Auth: SSO plugin (https://www.better-auth.com/docs/plugins/sso#schema)
model SsoProvider {
  id             String   @id
  issuer         String
  domain         String
  oidcConfig     String?
  samlConfig     String?
  userId         String
  providerId     String
  organizationId String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId])
  @@map("ssoprovider")
  @@schema("better_auth")
}
